# ClauseMate Environment Configuration Template
# Copy this file to .env and customize for your setup

# Data Source Configuration
# Options: test_data, private_local, encrypted_zip, remote_url, local_path
CLAUSEMATE_DATA_SOURCE=test_data

# Local Path Configuration (when using local_path source)
# CLAUSEMATE_DATA_PATH=/path/to/your/research/data

# Remote URL Configuration (when using remote_url source)
# CLAUSEMATE_DATA_URL=https://your-server.com/data.zip
# CLAUSEMATE_ACCESS_TOKEN=your-access-token

# Encrypted ZIP Configuration (when using encrypted_zip source)
# CLAUSEMATE_ZIP_PATH=/path/to/encrypted/data.zip
# CLAUSEMATE_ZIP_PASSWORD=your-zip-password

# Research Configuration
# CLAUSEMATE_RESEARCH_MODE=true
# CLAUSEMATE_OUTPUT_ANONYMIZE=true

# Logging Configuration
# CLAUSEMATE_LOG_LEVEL=INFO
# CLAUSEMATE_LOG_FILE=logs/clausemate.log

# Performance Configuration
# CLAUSEMATE_ENABLE_STREAMING=true
# CLAUSEMATE_BATCH_SIZE=1000
# CLAUSEMATE_ENABLE_CACHE=true
